<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz with Timer</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="container">
    <h1>Quiz with Timer</h1>
    <!-- Countdown Timer -->
    <div id="timer-container" class="mb-3">
        <h4>Time Remaining: <span id="timer">--:--</span></h4>
    </div>
    <form id="quiz-form">
        <div id="questions-container"></div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <!-- Correct Answers -->
    <div id="correct-answers" style="display: none;">
        <h2 class="mt-4">Correct Answers:</h2>
        <ul id="correct-answers-list"></ul>
    </div>
</div>

<!-- Bootstrap JS and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- Quiz data (JSON) -->
<script src="quiz-data.json"></script>

<!-- Timer logic -->
<script>








    quizData = {
        "questions": [
            {
                "question": "What is the capital of France?",
                "options": ["Paris", "Berlin", "Rome", "London"],
                "correctAnswer": "Paris"
            },
            {
                "question": "What is the capital of Japan?",
                "options": ["Tokyo", "Beijing", "Seoul", "Manila"],
                "correctAnswer": "Tokyo"
            }
        ]
    }
    // Set the quiz duration in seconds
    const quizDurationSeconds = 7; // 5 minutes

    // Update the timer every second
    const timerElement = document.getElementById('timer');
    let remainingTime = quizDurationSeconds;
    const timerInterval = setInterval(updateTimer, 1000);

    function updateTimer() {
        const minutes = Math.floor(remainingTime / 60);
        const seconds = remainingTime % 60;
        timerElement.textContent = `${padZero(minutes)}:${padZero(seconds)}`;
        remainingTime--;

        if (remainingTime < 0) {
            clearInterval(timerInterval);
            alert('Time is up! Quiz submitted.');
            document.getElementById('quiz-form').submit(); // Submit the form when time runs out
        }
    }

    function padZero(num) {
        return (num < 10 ? '0' : '') + num;
    }

    // Handle form submission
    document.getElementById('quiz-form').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent default form submission behavior
        clearInterval(timerInterval); // Stop the timer
        displayCorrectAnswers(); // Show correct answers
    });

    // Function to display correct answers
    function displayCorrectAnswers() {
        const correctAnswersContainer = document.getElementById('correct-answers-list');
        correctAnswersContainer.innerHTML = ''; // Clear previous content
        quizData.questions.forEach((question, index) => {
            const listItem = document.createElement('li');
            listItem.textContent = `${index + 1}. ${question.correctAnswer}`;
            correctAnswersContainer.appendChild(listItem);
        });
        document.getElementById('correct-answers').style.display = 'block';
    }

    // Dynamically generate quiz questions from JSON data
    const questionsContainer = document.getElementById('questions-container');
    quizData.questions.forEach((question, index) => {
        const questionDiv = document.createElement('div');
        questionDiv.classList.add('form-group');
        questionDiv.innerHTML = `
            <label for="q${index}">Question ${index + 1}: ${question.question}</label>
            <select class="form-control" id="q${index}" name="q${index}">
                ${question.options.map(option => `<option value="${option}">${option}</option>`).join('')}
            </select>
        `;
        questionsContainer.appendChild(questionDiv);
    });
</script>
</body>
</html>